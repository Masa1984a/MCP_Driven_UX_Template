# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=mcp_ux
DB_USER=postgres
DB_PASSWORD=your-strong-password-here

# Server Configuration
PORT=8080

# Environment (development/production)
NODE_ENV=development

# Authentication (set to 'true' to disable API key auth for local development)
DISABLE_AUTH=true

# API Key (only needed if DISABLE_AUTH=false)
# API_KEY=your-api-key-here

# Logging (Log Level of FastMCP)
LOG_LEVEL=info
FASTMCP_LOG_LEVEL=INFO

# You can select whether to display the database data in English (en) or Japanese (ja).
INIT_LANG=ja